@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title>Login</title>
    </head>
    <body>
        <div class="fade-in">
            <h2 class="has-text-align-center secondary-font-color">@ViewData["Title"]</h2>
            <div class="row has-text-align-center">
                <div class="col-md-4">
                    <section>
                        <form id="account" method="post">
                            <div asp-validation-summary="All" class="text-danger main-font-color"></div>
                            <div class="form-group item-padding">
                                <label asp-for="Input.UserName" class="main-font-color has-medium-font-size"></label>
                                <br />
                                <input asp-for="Input.UserName" class="form-control" />
                                <br />
                                <span asp-validation-for="Input.UserName" class="text-danger secondary-font-color"></span>
                            </div>
                            <div class="form-group item-padding">
                                <label asp-for="Input.Password" class="main-font-color has-medium-font-size"></label>
                                <br />
                                <input asp-for="Input.Password" class="form-control" />
                                <br />
                                <span asp-validation-for="Input.Password" class="text-danger secondary-font-color"></span>
                            </div>
                            <div class="form-group item-padding">
                                <div class="checkbox">
                                    <label asp-for="Input.RememberMe" class="main-font-color">
                                        <input asp-for="Input.RememberMe" />
                                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                                    </label>
                                </div>
                            </div>
                            <div class="form-group item-padding">
                                <button type="submit" class="main-button">Log in</button>
                            </div>
                            <div class="form-group item-padding">
                                <p>
                                    <a id="forgot-password" asp-page="./ForgotPassword" class="main-font-color has-medium-font-size">Forgot your password?</a>
                                </p>
                                <p>
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="has-large-font-size main-font-color">Register as a new user</a>
                                </p>
                            </div>
                        </form>
                    </section>
                </div>
                <div class="col-md-6 col-md-offset-2 item-padding">
                    <section>
                        <hr />
                    </section>
                </div>
            </div>
        </div>
    </body>
    </html>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
