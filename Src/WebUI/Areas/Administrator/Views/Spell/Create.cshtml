<title>Create Fighting Class</title>
<partial name="_AdminNavBar">
    <cache priority="Microsoft.Extensions.Caching.Memory.CacheItemPriority.NeverRemove">
        <div class="row  fade-in starting-div">
            <h1 class="main-font-color has-large-font-size item-padding">Create a Spell</h1>
            <div class="col-md-4 item-padding">
                <hr />
                <form asp-controller="Spell" asp-action="Create" method="post">
                    <div class="form-group fade-in item-padding has-normal-font-size">
                        <label for="input-name" class="contro-label has-normal-font-size">Name</label>
                        <br />
                        <input type="text" id="input-name" name="name" class="form-control" />
                    </div>
                    <div class="form-group fade-in item-padding has-normal-font-size">
                        <label for="input-type" class="contro-label has-normal-font-size">Type</label>
                        <br />
                        <input type="text" id="input-type" name="type" class="form-control" required />
                    </div>
                    <div class="form-group fade-in item-padding has-normal-font-size">
                        <label for="input-classType" class="contro-label has-normal-font-size">Class Type</label>
                        <br />
                        <input type="text" id="input-classType" name="classType" class="form-control" required />
                    </div>
                    <div class="form-group fade-in item-padding has-normal-font-size">
                        <label for="input-power" class="contro-label has-normal-font-size">Power</label>
                        <br />
                        <input type="number" id="input-power" name="power" class="form-control" min="0.1" max="3" required />
                    </div>
                    <div class="form-group fade-in item-padding has-normal-font-size">
                        <label for="input-secondarypower" class="contro-label has-normal-font-size">Secondary Power</label>
                        <br />
                        <input type="number" id="input-secondarypower" name="secondaryPower" class="form-control" min="0.1" max="3" required />
                    </div>
                    <div class="form-group fade-in item-padding has-normal-font-size">
                        <label for="input-manaRequirment" class="contro-label has-normal-font-size">Mana Requirment</label>
                        <br />
                        <input type="number" id="input-manaRequirment" name="manaRequirment" class="form-control" min="0.1" max="1" required />
                    </div>
                    <div class="form-group fade-in item-padding has-normal-font-size">
                        <label for="input-additionalEffect" class="contro-label has-normal-font-size">Additional Effect</label>
                        <br />
                        <input type="text" id="input-additionalEffect" name="additionalEffect" class="form-control" required />
                    </div>
                    <div class="form-group fade-in item-padding has-normal-font-size">
                        <label for="input-effectPower" class="contro-label has-normal-font-size">Effect Power</label>
                        <br />
                        <input type="number" id="input-effectPower" name="effectPower" class="form-control" min="0.1" max="1" required />
                    </div>
                    <div class="form-group fade-in item-padding has-normal-font-size">
                        <label for="input-buffOrEffectTarget" class="contro-label has-normal-font-size">Buff or Effect Target</label>
                        <br />
                        <input type="text" id="input-buffOrEffectTarget" name="buffOrEffectTarget" class="form-control" required />
                    </div>
                    <div class="form-group fade-in item-padding has-normal-font-size">
                        <label for="input-resistanceAffect" class="contro-label has-normal-font-size">Resistance Affect</label>
                        <br />
                        <input type="number" id="input-resistanceAffect" name="resistanceAffect" class="form-control" min="0.1" max="2" required />
                    </div>
                    <div class="form-group item-padding">
                        <input type="submit" value="Create" class="main-button" />
                    </div>
                    <div class="item-padding">
                        <hr />
                    </div>
                </form>
            </div>
        </div>
    </cache>
