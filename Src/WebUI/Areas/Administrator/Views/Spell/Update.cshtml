@{
    string id = Context.Request.Query["id"];
}
<title>Edit a Spell</title>
<partial name="_AdminNavBar">
    <cache priority="Microsoft.Extensions.Caching.Memory.CacheItemPriority.NeverRemove">
        <div class="row  fade-in starting-div">
            <h1 class="main-font-color has-large-font-size item-padding">Update a Spell</h1>
            <div class="col-md-4 item-padding">
                <hr />
                <form asp-controller="Spell" asp-action="Update" method="post">
                    <div class="form-group fade-in item-padding has-normal-font-size">
                        <label for="input-name" class="contro-label has-normal-font-size">New Name</label>
                        <br />
                        <input type="text" id="input-name" name="name" class="form-control" />
                    </div>
                    <div class="form-group fade-in item-padding has-normal-font-size">
                        <label for="input-type" class="contro-label has-normal-font-size">New Type</label>
                        <br />
                        <input type="text" id="input-type" name="type" class="form-control" />
                    </div>
                    <div class="form-group fade-in item-padding has-normal-font-size">
                        <label for="input-classType" class="contro-label has-normal-font-size">New Type</label>
                        <br />
                        <input type="text" id="input-classType" name="classType" class="form-control" />
                    </div>
                    <div class="form-group fade-in item-padding has-normal-font-size">
                        <label for="input-power" class="contro-label has-normal-font-size">New Power</label>
                        <br />
                        <input type="number" id="input-power" name="power" class="form-control" min="0.1" max="3" />
                    </div>
                    <div class="form-group fade-in item-padding has-normal-font-size">
                        <label for="input-secondarypower" class="contro-label has-normal-font-size">New Secondary Power</label>
                        <br />
                        <input type="number" id="input-secondarypower" name="secondaryPower" class="form-control" min="0.1" max="3" />
                    </div>
                    <div class="form-group fade-in item-padding has-normal-font-size">
                        <label for="input-manaRequirment" class="contro-label has-normal-font-size">New Mana Requirment</label>
                        <br />
                        <input type="number" id="input-manaRequirment" name="manaRequirment" class="form-control" min="0.1" max="1" />
                    </div>
                    <div class="form-group fade-in item-padding has-normal-font-size">
                        <label for="input-additionalEffect" class="contro-label has-normal-font-size">New Additional Effect</label>
                        <br />
                        <input type="text" id="input-additionalEffect" name="additionalEffect" class="form-control" />
                    </div>
                    <div class="form-group fade-in item-padding has-normal-font-size">
                        <label for="input-effectPower" class="contro-label has-normal-font-size">New Effect Power</label>
                        <br />
                        <input type="number" id="input-effectPower" name="effectPower" class="form-control" min="0.1" max="1" />
                    </div>
                    <div class="form-group fade-in item-padding has-normal-font-size">
                        <label for="input-buffOrEffectTarget" class="contro-label has-normal-font-size">New Buff or Effect Target</label>
                        <br />
                        <input type="text" id="input-buffOrEffectTarget" name="buffOrEffectTarget" class="form-control" />
                    </div>
                    <div class="form-group fade-in item-padding has-normal-font-size">
                        <label for="input-resistanceAffect" class="contro-label has-normal-font-size">New Resistance Affect</label>
                        <br />
                        <input type="number" id="input-resistanceAffect" name="resistanceAffect" class="form-control" min="0.1" max="2" />
                    </div>
                    <div class="form-group item-padding">
                        <input type="hidden" name="id" value="@id" />
                        <input type="submit" value="Update" class="main-button" />
                    </div>
                    <div class="item-padding">
                        <hr />
                    </div>
                </form>
            </div>
        </div>
    </cache>
