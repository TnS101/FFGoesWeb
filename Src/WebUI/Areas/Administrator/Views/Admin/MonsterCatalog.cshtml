@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Application.GameCQ.Monsters.Queries.GetAllMonstersQuery.MonsterListViewModel
@{
    Layout = "_Layout";
}
<head>
    <partial name="_AdminNavBar">
</head>
<body>
    <div class="container">
        <partial name="_SideBars">
            @foreach (var monster in Model.Monsters)
            {
                <div class="wp-block-columns">
                    <div class="wp-block-column" style="flex-basis:33.33%">
                        <div class="wp-block-image"><figure class="aligncenter size-large is-resized"><img src="@monster.ImageURL" alt="" width="100" height="100"></figure></div>
                    </div>

                    <div class="wp-block-column" style="flex-basis:66.66%">
                        <h1 class="site-title" style="text-align:center">@monster.Name</h1>
                        <h1 class="has-luminous-vivid-amber-color has-text-color has-text-align-center image-description">@monster.Description</h1>
                    </div>
                </div>

                <hr />
                <br />
            }
    </div>
</body>
<footer>
    <partial name="_Footer">
</footer>