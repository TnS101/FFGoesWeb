@model Application.GameCQ.FightingClasses.Queries.GetCurrentFightingClassQuery.FightingClassFullViewModel
<title>Current Fighting Class</title>
<partial name="_AdminNavBar">
    <div class=" starting-div fade-in aligncenter">
        <cache vary-by-query="id">
            <h1 class="secondary-font-color has-larger-font-size item-padding">@Model.Type</h1>
            <div class="item-padding">
                <hr />
                <div class="wp-block-image item-padding">
                    <img src="~/images/Icons/Heart.png" alt="Health" width="48" height="48">
                    <div class="item-padding">
                        <h2 class="secondary-font-color has-normal-font-size">@Model.MaxHP</h2>
                    </div>
                    <hr />
                </div>
                <div class="wp-block-image item-padding">
                    <img src="~/images/Icons/mana.png" alt="Mana" width="48" height="48">
                    <div class="item-padding">
                        <h2 class="secondary-font-color has-normal-font-size">@Model.MaxMana</h2>
                    </div>
                    <hr />
                </div>
                <div class="wp-block-image item-padding">
                    <img src="~/images/Icons/attack.png" alt="Attack" width="60" height="55">
                    <div class="item-padding">
                        <h2 class="secondary-font-color has-normal-font-size">@Model.AttackPower</h2>
                    </div>
                    <hr />
                </div>
                <div class="wp-block-image item-padding">
                    <img src="~/images/Icons/Wand.png" alt="Magic Power" width="56" height="48">
                    <div class="item-padding">
                        <h2 class="secondary-font-color has-normal-font-size">@Model.MagicPower</h2>
                    </div>
                    <hr />
                </div>
                <div class="wp-block-image item-padding">
                    <img src="~/images/Icons/HpRegen.png" alt="Health Regen" width="60" height="55">
                    <div class="item-padding">
                        <h2 class="secondary-font-color has-normal-font-size">@Model.HealthRegen</h2>
                    </div>
                    <hr />
                </div>
                <div class="wp-block-image item-padding">
                    <img src="~/images/Icons/ManaRegen.png" alt="Mana Regen" width="58" height="55">
                    <div class="item-padding">
                        <h2 class="secondary-font-color has-normal-font-size">@Model.ManaRegen</h2>
                    </div>
                    <hr />
                </div>
                <div class="wp-block-image item-padding">
                    <img src="~/images/Icons/Helm.png" alt="Armor" width="55" height="55">
                    <div class="item-padding">
                        <h2 class="secondary-font-color has-normal-font-size">@Model.ArmorValue</h2>
                    </div>
                    <hr />
                </div>
                <div class="wp-block-image item-padding">
                    <img src="~/images/Icons/Cap.png" alt="Resistance" width="55" height="55">
                    <div class="item-padding">
                        <h2 class="secondary-font-color has-normal-font-size">@Model.ResistanceValue</h2>
                    </div>
                    <hr />
                </div>
                <div class="wp-block-image item-padding">
                    <img src="~/images/Icons/Scythe.png" alt="Crit" width="55" height="55">
                    <div class="item-padding">
                        <h2 class="secondary-font-color has-normal-font-size">@Model.CritChance %</h2>
                    </div>
                    <hr />
                </div>
                <div class="item-padding">
                    <a asp-controller="FightingClass" asp-action="Update" asp-route-id="@Model.Id"><i class="fas fa-edit has-large-font-size main-font-color"></i></a>
                    <form asp-controller="FightingClass" asp-action="Delete" method="post" class="item-padding">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <input type="submit" name="button" value="Delete" class="main-button" />
                    </form>
                </div>
                <div class="item-padding">
                    <hr />
                </div>
            </div>
        </cache>
    </div>
