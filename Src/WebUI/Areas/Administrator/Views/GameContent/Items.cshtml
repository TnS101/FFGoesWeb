@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Application.GameCQ.Items.Queries.GetPersonalItemsQuery.ItemListViewModel
@{
    ViewData["Title"] = "Items";
}
<head>
    <partial name="_AdminNavBar">
</head>
<body>
    <h1 class="has-text-align-center secondary-font-color">Items</h1>
    <br />
    <br />
    @foreach (var item in Model.Items)
    {
        <div class="item-padding has-text-align-center">
            <img src="@item.ImageURL" alt="@item.Name's Image">
            <h3 class="main-font-color">@item.Name</h3>
            <br />
            <hr />
        </div>
    }
</body>