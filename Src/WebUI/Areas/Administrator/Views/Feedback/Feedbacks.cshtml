@model Application.CQ.Admin.Moderation.Feedback.Queries.GetAllFeedbacksQuery.FeedbacksListViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Feedbacks";
    Layout = "_Layout";
}
<head>
    <partial name="_AdminNavBar">
</head>
<body>
    <h1 class="has-text-align-center secondary-font-color">Feedbacks</h1>
    @{
        if (Model.Feedbacks.Count() == 0)
        {
            <h2 class="has-text-align-center secondary-font-color">No feedbacks to display</h2>
        }
        else
        {
            foreach (var feedback in Model.Feedbacks)
            {
                <div class="has-text-align-center item-padding">
                    <h4 class="main-font-color">@feedback.SenderName</h4>
                    <h4 class="main-font-color">@feedback.SentOn.Date</h4> <a asp-controller="Feedback" asp-action="CurrentFeedback" asp-route-id="@feedback.Id"><i class="fas fa-external-link-square-alt"></i></a>
                </div>
            }
        }
    }
</body>

