@model Application.GameCQ.Unit.Queries.GetUnitListQuery.UnitListViewModel
@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}
<partial name="_NavBar">
    <body>
        @if (Model.Units.Count() == 0)
        {
            <div class="has-text-align-center item-padding">
                <h2 class="main-font-color">Please, <a asp-controller="Unit" asp-action="Create">Create</a> a unit first before starting your adventure!</h2>
            </div>

        }
        else if (Model.Units.Any(u => !u.IsSelected))
        {
            <div class="has-text-align-center item-padding">
                <h2 class="main-font-color">Please, <a asp-controller="Unit" asp-action="Select">Select</a> a unit first before starting your adventure!</h2>
            </div>
        }
        else
        {
            <div class="has-text-align-center">
                <h2 class="main-font-color">Welcome to the World of FF! Lets start walking around!</h2>
                <a asp-controller="World" asp-action="Explore" class="has-larger-font-size"><i class="fas fa-shoe-prints"></i></a>
            </div>
        }


    </body>
    <partial name="_Footer">
