@model Application.CQ.Forum.Topic.Queries.GetAllTopicsQuery.TopicListViewModel
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Topics</title>
    <partial name="_NavBar">
</head>
<body>
    <div class="item-padding has-text-align-center fade-in">
        @if (Model.Topics.Count() == 0)
        {
            <div class="item-padding">
                <h2 class="main-font-color has-large-font-size">You currently don't have any Topics.</h2>
                <p class="item-padding main-font-color has-large-font-size"><a asp-controller="Topic" asp-action="Create">Create</a> one?</p>
            </div>
        }
        else
        {
            <h2 class="secondary-font-color has-text-align-center has-large-font-size">Your personal Topics</h2>
            <div class="item-padding">
                <hr />
            </div>
            @foreach (var topic in Model.Topics)
            {
                <div class="item-padding">
                    <p class="main-font-color has-large-font-size">[@topic.Category]@topic.Title</p>
                    <i class="fas fa-thumbs-up has-large-font-size"></i><b class="has-medium-font-size">@topic.Likes</b> <i class="fas fa-comments has-large-font-size"></i><b class="has-medium-font-size">@topic.Comments</b>
                    <a asp-controller="Forum" asp-action="CurrentTopic" asp-route-id="@topic.Id"><i class="fas fa-external-link-alt has-large-font-size"></i></a>
                    <div class="item-padding">
                        <hr />
                    </div>
                </div>
            }
        }

    </div>
</body>
</html>
