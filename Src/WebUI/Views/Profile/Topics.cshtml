@model Application.CQ.Forum.Topic.Queries.GetAllTopicsQuery.TopicListViewModel
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Topics</title>
    <partial name="_NavBar">
</head>
<body>
    <h1 class="secondary-font-color has-text-align-center">Your personal Topics</h1>
    <div class="item-padding has-text-align-center">
        @foreach (var topic in Model.Topics)
        {
            <div class="item-padding">
                <p class="main-font-color has-large-font-size">[@topic.Category]@topic.Title</p>
                <i class="fas fa-thumbs-up has-medium-font-size"></i>@topic.Likes <i class="fas fa-comments has-medium-font-size"></i>@topic.Comments
            <a asp-controller="Forum" asp-action="CurrentTopic" asp-route-id="@topic.Id"><i class="fas fa-external-link-alt has-medium-font-size"></i></a>
            </div>
        }
    </div>
</body>
</html>
