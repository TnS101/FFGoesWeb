@model Application.CQ.Social.Topics.Queries.GetCurrentTopicQuery.TopicFullViewModel
<meta name="viewport" content="width=device-width" />
<title>Edit</title>
<partial name="_ForumNavBar">
    <div class="starting-div fade-in ">
        <h1 class="has-large-font-size main-font-color item-padding">Edit your Topic</h1>
        <div class="item-padding">
            <hr />
        </div>
        <cache vary-by-query="id">
            <div class="row item-padding">
                <div class="col-md-4">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Title" class="contro-label has-normal-font-size has-normal-font-size"></label>
                            <br />
                            <input asp-for="Title" class="form-control" placeholder="@Model.Title" value="" />
                            <br />
                            <span asp-validation-for="Title" class="text-danger fade-in main-font-color has-medium-font-size"></span>
                        </div>
                        <div class="form-group item-padding">
                            <label asp-for="Category" class="contro-label has-normal-font-size has-normal-font-size">Category : </label>
                            <select asp-for="Category">
                                <option value="Game">Game</option>
                                <option value="Complain">Complain</option>
                                <option value="Social">Social</option>
                                <option value="Ideas">Ideas</option>
                            </select>
                            <br />
                            <span asp-validation-for="Category" class="text-danger fade-in main-font-color has-medium-font-size"></span>
                        </div>
                        <div class="form-group item-padding">
                            <label asp-for="Content" class="contro-label has-normal-font-size has-normal-font-size"></label>
                            <br />
                            <input asp-for="Content" class="form-control" placeholder="@Model.Content" value=""/>
                            <br />
                            <span asp-validation-for="Content" class="text-danger fade-in main-font-color has-medium-font-size"></span>
                        </div>
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="form-group item-padding">
                            <input type="submit" value="Edit" class="main-button" />
                        </div>
                    </form>
                </div>
            </div>
        </cache>
    </div>
