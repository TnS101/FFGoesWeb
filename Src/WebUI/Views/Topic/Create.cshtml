@model string[]

    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <partial name="_ForumNavBar">
    </head>
    <body>
        <div class="item-padding">
            <form asp-controller="Topic" asp-action="Create" method="post">
                <div class="item-padding">
                    <input type="text" name="title" value="" placeholder="Title..." />
                </div>
                <div class="item-padding has-text-align-center">
                    <select name="category">
                        <option value="Game">Game</option>
                        <option value="Social">Social</option>
                        <option value="Complain">Complain</option>
                        <option value="Ideas">Ideas</option>
                    </select>
                </div>
                
                <div class="item-padding">
                    <input type="text" name="content" value="" placeholder="Your thoughts..." />
                </div>
                <div class="item-padding has-text-align-center">
                    <input type="submit" name="name" value="Create" />
                </div>
            </form>
        </div>

        <div class="item-padding has-text-align-center">
            @if (Model != null)
            {
                <p class="main-font-color has-large-font-size">@Model[1]</p>
            }
        </div>
        
    </body>
    </html>