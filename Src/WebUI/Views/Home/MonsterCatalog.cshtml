@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Application.GameCQ.Monster.Queries.MonsterImageListViewModel
@{
    Layout = "_Layout";
}
<html xmlns="http://www.w3.org/1999/xhtml" class="secondary-background-color">
<head>
    <partial name="_NavBar">
</head>
<body class="secondary-background-color">
    <div class="container">
        <h1 class="has-text-align-center secondary-font-color item-padding has-larger-font-size">Monsters</h1>
        @foreach (var image in Model.Monsters)
        {
            <div class="main-gradient secondary-background-color" style="padding-top:100px">
                <div style="flex-basis: 33.33%">
                    <div class="wp-block-image"><figure class="aligncenter size-large is-resized"><img src="@image.Path" alt="" width="100" height="100"></figure></div>
                </div>

                <div class="wp-block-column" style="flex-basis:66.66%">
                    <h1 class="site-title" style="text-align:center">@image.Name</h1>
                    <h1 class="has-luminous-vivid-amber-color has-text-color has-text-align-center image-description">@image.Description</h1>
                </div>
            </div>

            <hr class="secondary-font-color"/>
            <br />
        }
    </div>
    <partial name="_Footer">
</body>
</html>


