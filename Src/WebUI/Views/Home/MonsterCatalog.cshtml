@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Application.GameCQ.Monster.Queries.MonsterImageListViewModel
@{
    Layout = "_Layout";
}
<head>
    <partial name="_NavBar">
</head>
<body>
    <div class="container item-padding ">
        <partial name="_SideBars">
            @foreach (var image in Model.Monsters)
            {
                <div class="wp-block-columns big-gradient-background">
                    <div class="wp-block-column" style="flex-basis: 33.33%">
                        <div class="wp-block-image"><figure class="aligncenter size-large is-resized"><img src="@image.Path" alt="" width="100" height="100"></figure></div>
                    </div>

                    <div class="wp-block-column" style="flex-basis:66.66%">
                        <h1 class="site-title" style="text-align:center">@image.Name</h1>
                        <h1 class="has-luminous-vivid-amber-color has-text-color has-text-align-center image-description">@image.Description</h1>
                    </div>
                </div>

                <hr />
                <br />
            }
    </div>
</body>
    <footer>
        <partial name="_Footer">
</footer>