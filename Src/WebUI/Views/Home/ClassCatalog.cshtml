@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Application.GameCQ.Image.Queries.ImageListViewModel
@{
    Layout = "_Layout";
}
<head>
</head>
<body>
    <partial name="_NavBar">
        <div class="container">
            <div class="sidebar">
            </div>
            <div class="sidebar2">
            </div>

            @foreach (var image in Model.Images)
            {
                <div class="entry-content single-entry-content">

                    <div class="wp-block-image"><figure class="aligncenter size-large is-resized"><img src="@image.IconURL" alt="" width="60" height="60"></figure></div>
                    <div class="wp-block-image is-style-circle-mask"><figure class="aligncenter size-large is-resized"><img src="@image.Path" alt="" width="300" height="300"></figure></div>
                    <div class="entry-header with-image full">
                        <h1 class="site-title has-text-align-center">@image.Name</h1>
                        <h1 class="has-luminous-vivid-amber-color has-text-color has-text-align-center image-description">@image.Description</h1>
                    </div>
                </div>
                <hr />
                <br />
            }
        </div>

</body>
<partial name="_Footer">
