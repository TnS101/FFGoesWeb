@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model System.Security.Claims.ClaimsPrincipal
@using Common
@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}
    <html xmlns="http://www.w3.org/1999/xhtml" class="main-gradient">
    <head class="main-gradient">
        @if (Model.IsInRole(GConst.AdminRole))
        {
            await Html.RenderPartialAsync("_AdminNavBar");
        }
        @if (Model.IsInRole(GConst.UserRole))
        {
            await Html.RenderPartialAsync("_NavBar");
        }
        else
        {
            await Html.RenderPartialAsync("_GuestNavBar");
        }

    </head>
    <body class="main-gradient">
        <div id="page">
            <header>
                <div>
                    <h1 class=" main-font-color site-title"><a asp-controller="Home" asp-action="Index">Final Fantasy Tryout</a></h1>
                    @if (!Model.Identity.IsAuthenticated)
                    {
                        <div class="container">
                            <h1 class="main-font-color has-text-align-center">Join other players in order to take what’s yours!</h1>
                        </div>
                    }
                    else
                    {
                        <div class="container">
                            <h1 class="main-font-color has-text-align-center">Final Fantasy Tryout is an individual project by Hristo Todorov.</h1>
                            <h2 class="main-font-color has-text-align-center">The game is very simple : Attack, Endure, Win!</h2>
                        </div>
                    }

                </div>
            </header>
            <div id="content" class="site-content clearfix">
                <div class="container clearfix">

                    <div id="primary" class="content-area full-width">
                        <main id="main" class="site-main" role="main">
                            @if (!Model.Identity.IsAuthenticated)
                            {
                                <article id="post-6" class="post-6 page type-page status-publish hentry">

                                    <div class="entry-content single-entry-content">

                                        <div class="wp-block-button aligncenter is-style-fill"><a href="https://localhost:44341/Identity/Account/Register" class="wp-block-button__link has-text-color has-background creation-button"><strong>Join Now</strong></a></div>
                                    </div>

                                </article>
                            }

                        </main>
                    </div>
                </div>

            </div>
            <partial name="_CookieConsentPartial" />
            <br />
            <partial name="_Footer">
        </div>
    </body>
    </html>
