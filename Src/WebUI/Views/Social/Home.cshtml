@model AppUser
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
    <partial name="_SocialNavBar">
</head>
<body>
    <div class="fade-in item-padding">
        <h1 class="has-text-align-center secondary-font-color has-large-font-size">Welcome to your Social Panel!</h1>
        <div class="has-text-align-center item-padding">
            <hr />
            <br />
            <p class="main-font-color has-large-font-size">
                Here you can see your Social Activities, such as <a asp-controller="Friends" asp-action="Requests"><em class="main-font-color">Friend Requests</em></a>,
                <a asp-controller="Notification" asp-action="All"><em class="main-font-color">Notifications</em></a>
                and <a asp-controller="Friends" asp-action="All"><em class="main-font-color">Messages</em></a>.
            </p>
            <div class="item-padding">
                <form asp-controller="Social" asp-action="Search" method="get">
                    <input type="text" name="userName" value="" placeholder="Search for users..." />
                    <div class="item-padding">
                        <input type="submit" name="name" class="main-button" value="Search" />
                    </div>
                </form>
                <div class="item-padding">
                    <hr />
                </div>
            </div>
        </div>
    </div>
</body>
</html>
